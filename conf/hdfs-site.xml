<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in the file under the Hadoop conf, then copy it here. -->

<configuration>
<property>
  <name>dfs.namenode.dir</name>
    <value>file:///mnt/extra/dfs-ucare/namenode</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:///mnt/extra/dfs-ucare/datanode</value>
  </property>
  <property>
    <name>dfs.replication</name>
    <value>3</value>
    <description>Default block replication..
    </description>
  </property>
</configuration>
